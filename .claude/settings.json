      "Bash(touch:*)",
      "Bash(ls:*)",
      "Bash(find . :*)",
      "Bash(cat:*)",
      "Bash(head:*)",
      "Bash(tail:*)",
      "Bash(echo:*)",
      "Bash(pwd)",
      "Bash(tree:*)",
      "Bash(git status)",
      "Bash(git diff:*)",
      "Bash(git log:*)",
